<!-- Admin_Login -->
<section class="admin_login">
    <div class="admin_login_container">
        <form action="/admin/login" method="POST">
            {{#if admin_login_error}}
            <div class="error_group" style="background: #ac4040; margin-bottom: 5px; padding: 10px; display: flex; align-items: center; justify-content: center;">
                <p style="color: #f7f7f7;"><i style="font-size: 20px;" class='bx bx-error'></i> {{admin_login_error}}</p>
            </div>
            {{/if}}
            <div class="admin_login_input_group">
                <label for="name">Enter Email Address</label>
                <input type="text" value="admin@gmail.com" name="email" id="name" required>
            </div>
            <div class="admin_login_input_group">
                <label for="Part_of_speech">Enter Password</label>
                <input type="text" value="admin" name="password" id="Part_of_speech" required>
            </div>
            <br>
            <div class="admin_login_input_group button_group">
                <input type="submit" value="submit">
            </div>
        </form>
    </div>
</section>
