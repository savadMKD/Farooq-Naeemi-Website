<!-- Admin_Login -->
<section class="admin_login">
    <div class="admin_login_container">
        <form action="/admin/add_ramadan" method="POST" enctype="multipart/form-data">
            <div class="admin_login_input_group">
                <label for="name">Enter Name of The Speech ( Ramadan )</label>
                <input type="text" name="name" id="name" required>
            </div>
            <div class="admin_login_input_group">
                <label for="Part_of_speech">Enter Subheading ( Ramadan )</label>
                <input type="text" name="sub_heading" id="Part_of_speech" required>
            </div>
            <div class="admin_login_input_group">
                <label for="Part_of_speech">Enter Link of Speech ( Ramadan )</label>
                <input type="text" name="link" id="Part_of_speech" required>
            </div>
            <div class="admin_login_input_group">
                <label for="Image">Upload Image ( Ramadan )</label>
                <input type="file" name="Image" id="Image" required>
            </div>
            <br>
            <div class="admin_login_input_group button_group">
                <input type="submit" value="submit">
            </div>
        </form>
    </div>
</section>
